<div class="row">
    <div class="col-md-12">
        <h2>Categories
            <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
        </h2>
        <hr />

        <div class="table-responsive">
            <table class="table">
                <thead>
                    <th>Category&nbsp;ID</th>
                    <th>Category&nbsp;Name</th>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><a href="/posts?category={{id}}">
                                {{id}}</a></td>
                        <td><a href="/posts?category={{id}}">
                                {{category}}</a></td>
                        <td><a href="/categories/delete/{{id}}" class="btn btn-danger">remove</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{#unless data}}
    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>
    {{/unless}}

</div>
</div>