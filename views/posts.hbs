<div class="row">
  <div class="col-md-12">
    <h2>Posts
      <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
    </h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <th>Post&nbsp;ID</th>
          <th>Title</th>
          <th>Post&nbsp;Date</th>
          <th>Category</th>
          <th>Published</th>
        </thead>
        <tbody>
          {{#each posts}}
          <tr>
            <td><a href="/post/{{id}}">{{id}}</a></td>
            <td>{{title}}</td>
            <td>{{#formatDate postDate}}{{/formatDate}}</td>
            <td><a href="/posts?category={{category}}">
                {{category}}</a></td>
            <td>{{published}}</td>
            <td><a href="/posts/delete/{{id}}" class="btn btn-danger">remove</a></td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{#unless posts}}
  <div class="col-md-12 text-center">
    <strong>{{message}}</strong>
  </div>
  {{/unless}}
</div>
</div>